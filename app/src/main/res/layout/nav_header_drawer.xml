<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/grad"
    android:orientation="vertical">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/header_profile_image_drawer"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/my_account_icon"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/grey"
        app:civ_shadow_radius="5dp" />

    <TextView
        android:id="@+id/user_name_profile_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="16dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:text="Welcome"
        android:layout_below="@id/header_profile_image_drawer"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/email_user_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-thin"
        android:text="emailAddress@mail.com"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@id/user_name_profile_drawer"/>
    <TextView
        android:id="@+id/signin_signup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-thin"
        android:text="Log in/Sign Up"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@id/user_name_profile_drawer"/>


    <View
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/wave"
    />

</RelativeLayout>
