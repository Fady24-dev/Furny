<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_Activity">

    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/grad"
        android:paddingBottom="20dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="5dp"
            app:civ_shadow_color="@color/grey"
            android:src="@drawable/my_account_icon"/>


        <TextView
            android:id="@+id/profile_user_name"
            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_image"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:text="Welcome"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/nationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_user_name"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Cairo, Egypt"
            android:textAllCaps="true"
            android:textColor="#ec5b3c"
            android:textSize="14sp" />
        <!--
        <TextView
            android:id="@+id/signin_signup_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_user_name"
            android:layout_centerHorizontal="true"
            android:text="Log in/Sign Up"
            android:textStyle="bold"
            android:textColor="#ec5b3c"
            android:textSize="14sp" /> -->


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rellay1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="Email"
                    android:textColor="@color/standard"
                    android:textSize="15sp" />

                <EditText
                    android:enabled="false"
                    android:background="@null"
                    android:id="@+id/profile_user_email_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="18sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@id/profile_user_email_edit"
                    android:layout_marginTop="15dp"
                    android:background="@color/lightgrey" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/phone"
                    android:fontFamily="@font/calibri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textColor="@color/standard"
                    android:textSize="15sp" />

                <EditText
                    android:enabled="false"
                    android:background="@null"
                    android:id="@+id/profile_user_phone_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phone"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@id/profile_user_phone_edit"
                    android:layout_marginTop="15dp"
                    android:background="@color/lightgrey" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/address"
                    android:fontFamily="@font/calibri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/standard"
                    android:textSize="15sp" />

                <EditText
                    android:enabled="false"
                    android:background="@null"
                    android:id="@+id/profile_user_address_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@id/profile_user_address_edit"
                    android:layout_marginTop="15dp"
                    android:background="@color/lightgrey" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/facebook"
                    android:fontFamily="@font/calibri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:textColor="@color/standard"
                    android:textSize="15sp" />

                <EditText
                    android:enabled="false"
                    android:background="@null"
                    android:id="@+id/profile_user_facebook_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/facebook"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@id/profile_user_facebook_edit"
                    android:layout_marginTop="15dp"
                    android:background="@color/lightgrey" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="end"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="10dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/edit_pen_white"
                app:fabCustomSize="65dp"
                android:backgroundTint="@color/colorPrimary"
                app:rippleColor="#ec5b3c"
                android:layout_margin="16dp" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>