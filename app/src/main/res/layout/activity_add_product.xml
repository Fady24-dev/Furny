<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductActivity"
    android:background="#FFF"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_product_category"
        android:layout_marginTop="31dp"
        android:text="Upload Model : "
        android:layout_marginLeft="50dp"
        android:padding="5dp"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/choose_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_product_category"
        android:layout_alignParentStart="true"
        android:layout_marginStart="189dp"
        android:layout_marginTop="30dp"
        android:background="#FFFF"
        android:padding="5dp"
        android:src="@drawable/ic_attach_file_black_24dp"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:cropToPadding="false"
        android:src="@drawable/ic_image_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/add_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:padding="15dp"
        android:hint="Product Name"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/input_design"
        />


    <EditText
        android:id="@+id/add_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_product_name"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/input_design"
        android:hint="Product Price"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/add_product_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_product_price"
        android:inputType="textMultiLine"
        android:layout_marginTop="6dp"
        android:padding="15dp"
        android:hint="Product Category"
        android:textSize="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/input_design"
        />

    <Button
        android:id="@+id/choose_image_btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_product_category"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/buttonshape"
        android:padding="17dp"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="18sp"
        />


</RelativeLayout>